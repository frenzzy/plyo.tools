{
  "version": "1.0.0",
  "name": "plyo-tools",
  "repository": "https://github.com/plyo/plyo.tools",
  "description": "Common tools for plyo projects",
  "scripts": {
    "lint": "LIST=`git diff --cached --name-only --diff-filter=ACMR | grep \"js$\"`; if [ \"$LIST\" ]; then eslint $LIST && jscs $LIST; fi",
    "build": "rm -rf dist/* && babel lib -d dist",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "babel-cli": "6.6.5",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-polyfill": "6.7.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-runtime": "^6.6.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "jscs": "^2.10.1",
    "pre-commit": "^1.1.2"
  },
  "pre-commit": [
    "lint"
  ],
  "license": "SEE LICENSE IN LICENSE.md"
}
